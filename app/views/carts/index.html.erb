<div class="container">
  <div class="payment_details">
    <h1>Addresse</h1>
    <div class="details_card">
      <div class="name_address">
        <div class="first_lastName">
          <input type="text" placeholder="First Name" />
          <input type="text" placeholder="Last Name" />
        </div>
        <div class="address">
          <input type="text" placeholder="Address" />
          <input type="number" placeholder="Pincode" />
          <input type="text" placeholder="Country" />
        </div>
      </div>
    </div>
  </div>
  <div class="order_summary">

<p id="notice"><%= notice %></p>

<h1>Résumé de la commande</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
            <%= @current_user = current_user.id %>
        <td><%= Cart.find(2).user_id %></td>
        <td><%= Cart.find(2).item_id %></td>
        <td><%= Item.find(Cart.find(2).item_id).title %></td>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>